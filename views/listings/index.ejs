<% layout("/layouts/boilerplate") %>

    <body>
        <h3>All listings</h3>
        <div class="row row-cols-lg-4 row-cols-md-4 row-cols-md-2 row-cols-sm-1">
              <% for(let listing of allListings){ %>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%= listing.Image
                %>" alt="listing_Image">
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b>
                            <br>
                            &#8377; <%= listing.price.toLocaleString('en-IN') %>/night
                    </p>
                </div>
            </div>
            <% } %>
        </div>
    </body>